# ==============================================
# Environment Configuration Template
# ==============================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git (it should be in .gitignore)

# ==============================================
# Database Configuration (PostgreSQL)
# ==============================================
DATABASE_HOST=modelearth-postgres-server.postgres.database.azure.com
DATABASE_NAME=exiobase
DATABASE_USER=postgresadmin
DATABASE_PASSWORD=your_password_here
DATABASE_PORT=5432

# ==============================================
# CSV Data Source
# ==============================================
# Path to the trade-data repository on your local machine
# Example (Windows): C:/Users/username/trade-data
# Example (Mac/Linux): /Users/username/trade-data
TRADE_DATA_REPO_PATH=../trade-data

# Available years for import (comma-separated)
TRADE_DATA_YEARS=2019,2022

# ==============================================
# Import Settings
# ==============================================
# Number of records to insert per batch (for performance)
BATCH_SIZE=1000

# Maximum number of concurrent import operations
MAX_CONCURRENT_IMPORTS=3

# ==============================================
# Application Settings
# ==============================================
# Environment: Development, Staging, Production
ASPNETCORE_ENVIRONMENT=Development

# Logging level: Trace, Debug, Information, Warning, Error, Critical
LOG_LEVEL=Information
